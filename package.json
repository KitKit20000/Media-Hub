{
  "name": "Media Hub",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron --js-flags=--max-old-space-size=4096 ."
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "@electron/packager": "^17.1.2"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "repo": "your-repo-name",
        "owner": "your-github-username"
      }
    ],
    "appId": "com.yourcompany.yourapp",
    "win": {
      "target": "nsis",
      "publish": ["github"]
    }
  }
}
